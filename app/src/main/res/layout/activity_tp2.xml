<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Tp2Activity">

<Button
    android:id="@+id/btnCurrencyConversion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:onClick="navigateToCurrencyConversion"
    android:text="Conversion de Monnaie"
    app:layout_constraintBottom_toTopOf="@+id/btnTemperatureConversion"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:backgroundTint="@color/gris"
    android:textColor="@color/black"

    tools:ignore="MissingConstraints" />

<Button
    android:id="@+id/btnTemperatureConversion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnCurrencyConversion"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="220dp"
    android:onClick="navigateToTemperatureConversion"
    android:text="Conversion de TempÃ©rature"
    app:layout_constraintTop_toBottomOf="@id/btnCurrencyConversion"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:backgroundTint="@color/gris"
    android:textColor="@color/black"
    tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>